set editing-mode vi
set enable-bracketed-paste on
set blink-matching-paren on
set show-all-if-ambiguous on
set bell-style none

set keymap vi-insert

$if mode=vi
# Map Ctrl-a to beginning of line in vi-insert mode
"\C-a": beginning-of-line
# Map Ctrl-e to end of line in vi-insert mode
"\C-e": end-of-line
"jj": vi-movement-mode
$endif


set keymap vi-command

$if mode=vi
# Map Ctrl-a to beginning of line in vi-insert mode
"\C-a": beginning-of-line
# Map Ctrl-e to end of line in vi-insert mode
"\C-e": end-of-line
$endif
